{
  "manifest_version": 3,
  "name": "CopyZilla Email Assistant",
  "description": "AI powered email assistant to help you write better emails",
  "version": "1.0.0",
  "action": {
    "default_title": "CopyZilla Email Assistant",
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "icons": {},
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "content-script/src/main.tsx"
      ],
      "media": []
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}